<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgmapa"
    tools:context=".rutas">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="409dp"
        android:layout_height="844dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="374dp"
            android:layout_height="73dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="13dp"
            android:layout_marginBottom="91dp"
            app:layout_constraintBottom_toTopOf="@+id/ruta4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <ImageView
            android:id="@+id/ruta3"
            android:layout_width="88dp"
            android:layout_height="126dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="116dp"
            android:layout_marginBottom="58dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/ruta2"
            app:layout_constraintEnd_toStartOf="@+id/ruta4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner3"
            app:layout_constraintVertical_bias="0.258"
            app:srcCompat="@drawable/rb_25530"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ruta1"
            android:layout_width="147dp"
            android:layout_height="136dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="64dp"
            android:layout_marginBottom="138dp"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ruta2"
            app:layout_constraintTop_toBottomOf="@+id/ruta4"
            app:srcCompat="@drawable/rb_25530"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ruta2"
            android:layout_width="142dp"
            android:layout_height="141dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="231dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ruta1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aventurero3"
            app:srcCompat="@drawable/rb_25530"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/ruta4"
            android:layout_width="132dp"
            android:layout_height="84dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="69dp"
            android:layout_marginBottom="-120dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/aventurero4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ruta3"
            app:layout_constraintTop_toBottomOf="@+id/cajaTexto"
            app:srcCompat="@drawable/rb_25530"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/aventurero3"
            android:layout_width="126dp"
            android:layout_height="174dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="55dp"
            android:layout_marginBottom="65dp"
            android:src="@drawable/aventureroladodos"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/ruta2"
            app:layout_constraintEnd_toStartOf="@+id/ruta4"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ruta3"
            app:layout_constraintTop_toBottomOf="@+id/spinner3"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/aventurero5"
            android:layout_width="126dp"
            android:layout_height="174dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/aventureroladodos"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/ruta2"
            app:layout_constraintEnd_toStartOf="@+id/ruta2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aventurero3"
            app:layout_constraintVertical_bias="0.0"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/aventurero4"
            android:layout_width="126dp"
            android:layout_height="174dp"
            android:layout_marginStart="149dp"
            android:layout_marginTop="66dp"
            android:layout_marginEnd="42dp"
            android:layout_marginBottom="138dp"
            android:src="@drawable/aventureroladodos"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/ruta1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ruta3"
            app:layout_constraintTop_toBottomOf="@+id/spinner3"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="143dp"
            android:layout_height="127dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="43dp"
            android:alpha="@dimen/material_emphasis_medium"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/reiniciar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ruta2"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/reiniciar"
            android:layout_width="161dp"
            android:layout_height="94dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="51dp"
            android:textAlignment="center"
            android:textColor="#AF3E3833"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/ruta1"
            tools:text="Ieso 4 de Abril" />

        <ImageView
            android:id="@+id/finaltrayecto"
            android:layout_width="49dp"
            android:layout_height="47dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="108dp"
            app:layout_constraintBottom_toTopOf="@+id/reiniciar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/ruta1"
            app:layout_constraintTop_toBottomOf="@+id/aventurero4"
            tools:visibility="invisible" />

        <ImageView
            android:id="@+id/aventurero1"
            android:layout_width="114dp"
            android:layout_height="182dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="38dp"
            android:src="@drawable/aventurero"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/reiniciar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.964"
            app:layout_constraintStart_toEndOf="@+id/ruta1"
            app:layout_constraintTop_toBottomOf="@+id/aventurero4"
            app:layout_constraintVertical_bias="1.0"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/aventurero2"
            android:layout_width="141dp"
            android:layout_height="198dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/aventurero"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/reiniciar"
            app:layout_constraintEnd_toStartOf="@+id/aventurero1"
            app:layout_constraintHorizontal_bias="0.078"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toBottomOf="@+id/aventurero4"
            app:layout_constraintVertical_bias="1.0"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/cajaTexto"
            android:layout_width="218dp"
            android:layout_height="107dp"
            android:layout_marginStart="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="96dp"
            android:layout_marginBottom="9dp"
            android:textAlignment="center"
            android:textColor="#8A5707"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/aventurero4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ruta3"
            app:layout_constraintTop_toBottomOf="@+id/spinner3" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="407dp"
            android:layout_height="127dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="#85784B0C"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/spinner3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/usuario"
                android:layout_width="508dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="TextView"
                android:textAlignment="center"
                android:textSize="34sp" />

            <ImageView
                android:id="@+id/avataruser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/avatarcuatro" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/vertical"
                    android:layout_width="71dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lineSpacingExtra="0sp"
                    android:text="V\nI\nD\nA\nS"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:typeface="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/corazonUno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/corazon" />

                    <ImageView
                        android:id="@+id/corazonDos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/corazon" />

                    <ImageView
                        android:id="@+id/corazonTres"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/corazon" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>